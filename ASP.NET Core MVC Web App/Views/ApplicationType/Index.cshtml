@model IEnumerable<ASP.NET_Core_MVC_Web_App.Models.ApplicationType>

@{
    ViewData["Title"] = "Application Type";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                Create New Application Type
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>
                    @*<th>
                        Display Order
                    </th>*@
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (ApplicationType applicationType in Model)
                {
                    <tr>
                        <td width="80%">@applicationType.Name</td>
                        <td width="20%"></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No application type exists.</p>
    }
</div>